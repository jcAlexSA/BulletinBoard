@model BulletinBoard.Models.Adverts.AdvertResponse

<div class="row">
    <div class="col col-md-10 offset-2">
        <div class="card">
            <div class="card-header">
                @Model.Title
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@Model.Description</p>
                    <div class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></div>
                </blockquote>
                <div class="date-time">
                    <span>@Model.PublishDate.ToShortDateString()</span>
                </div>
            </div>
        </div>
    </div>
</div>